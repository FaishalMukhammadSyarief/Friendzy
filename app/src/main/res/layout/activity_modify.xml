<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="activity"
            type="com.zhalz.friendzy.ui.ModifyActivity" />

        <variable
            name="image"
            type="android.graphics.Bitmap" />

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.ModifyActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_scrollFlags="scroll|enterAlwaysCollapsed|enterAlways"
                app:menu="@menu/toolbar_edit"
                app:navigationIcon="@drawable/ic_back"
                app:navigationIconTint="@color/black"
                app:navigationOnClickListener="@{() -> activity.finishActivity()}"
                tools:title="Create"
                app:title="@{activity.toolbarTitle}"
                app:titleCentered="true"
                app:titleTextAppearance="@style/ToolbarTitle" />

        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_marginVertical="12dp"
                    android:padding="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/deer"
                    app:shapeAppearance="@style/fab_shape"
                    app:strokeColor="@color/green"
                    app:strokeWidth="3dp" />

                <View style="@style/Divider" />

                <!-- Name -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/et_name"
                    style="@style/Et_Input"
                    android:layout_marginTop="12dp"
                    android:hint="@string/name_hint"
                    app:boxCornerRadiusBottomEnd="25dp"
                    app:boxCornerRadiusTopEnd="25dp"
                    app:counterEnabled="true"
                    app:counterMaxLength="30"
                    app:startIconDrawable="@drawable/ic_profile">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapWords"
                        android:text="@={activity.name}"
                        android:maxLength="30"
                        tools:ignore="TextContrastCheck,VisualLintTextFieldSize" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- School -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/et_birth"
                    style="@style/Et_Input"
                    android:hint="@string/date_hint"
                    app:boxCornerRadiusBottomEnd="25dp"
                    app:boxCornerRadiusTopEnd="25dp"
                    app:startIconDrawable="@drawable/ic_calendar">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="date"
                        android:maxLength="30"
                        android:text="@={activity.birth}"
                        tools:ignore="TextContrastCheck,VisualLintTextFieldSize" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Description -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/et_description"
                    style="@style/Et_Input"
                    android:hint="@string/description_hint"
                    app:boxCornerRadiusBottomEnd="25dp"
                    app:boxCornerRadiusTopEnd="25dp"
                    app:startIconDrawable="@drawable/ic_info">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:text="@={activity.description}"
                        android:inputType="textMultiLine"
                        tools:ignore="TextContrastCheck,VisualLintTextFieldSize" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </ScrollView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="12dp"
            android:backgroundTint="@color/green"
            android:contentDescription="@string/cd_add"
            app:shapeAppearanceOverlay="@style/fab_shape"
            app:srcCompat="@drawable/ic_check"
            android:onClick="@{() -> activity.save()}"
            app:tint="@color/white" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>