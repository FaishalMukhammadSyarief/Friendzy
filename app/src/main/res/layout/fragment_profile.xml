<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="fragment"
            type="com.zhalz.friendzy.ui.profile.ProfileFragment" />

        <variable
            name="isEdit"
            type="Boolean" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_profile"
            imageUrl="@{fragment.photo}"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginVertical="12dp"
            android:padding="5dp"
            android:scaleType="centerCrop"
            app:shapeAppearance="@style/fab_shape"
            app:strokeColor="@color/green"
            app:strokeWidth="3dp"
            tools:src="@drawable/goblin" />

        <View style="@style/Divider" />

        <!-- Name -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/etl_name"
            style="@style/Et_Input"
            android:hint="@string/name_hint"
            app:startIconDrawable="@drawable/ic_profile">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="@{isEdit}"
                android:inputType="text"
                android:text="@={fragment.name}"
                android:textColor="@color/black"
                tools:ignore="TextContrastCheck,VisualLintTextFieldSize" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- School -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/etl_school"
            style="@style/Et_Input"
            android:hint="@string/school_hint"
            app:startIconDrawable="@drawable/ic_school">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_school"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="@{isEdit}"
                android:inputType="text"
                android:text="@={fragment.school}"
                android:textColor="@color/black"
                tools:ignore="TextContrastCheck,VisualLintTextFieldSize" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Description -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/etl_desc"
            style="@style/Et_Input"
            android:hint="@string/description_hint"
            app:startIconDrawable="@drawable/ic_info">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="@{isEdit}"
                android:inputType="textMultiLine"
                android:text="@={fragment.desc}"
                android:textColor="@color/black"
                tools:ignore="TextContrastCheck,VisualLintTextFieldSize" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginHorizontal="12dp"
            android:backgroundTint="@color/green"
            android:contentDescription="@string/cd_edit"
            android:onClick="@{() -> fragment.btnClick()}"
            android:src="@{isEdit ? @drawable/ic_check : @drawable/ic_edit}"
            app:elevation="0dp"
            app:tint="@color/white" />

    </LinearLayout>
</layout>